<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!--link rel='stylesheet' href='/stylesheets/style.css' /-->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  
</head>
  <body>

    <% include partials/menu %>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= title %>
              </h5>

              <a href="/users/nuevo" class="btn btn-primary">Nuevo Usuario</a>
              
              <table class="table table-striped table-hover">
                <tr>
                  <td>NOMBRES</td>
                  <td>APELLIDOS</td>
                  <td>CORREO</td>
                  <td>ESTADO</td>
                  <td>ACCIONES</td>
                </tr>
                <% usuarios.forEach(function(user){ %>                  
                
                <tr>
                  <td><%= user.nombres %></td>
                  <td><%= user.apellidos %></td>
                  <td><%= user.correo %></td>
                  <td><%= user.estado %></td>
                  <td>
                    <a href="" class="btn btn-success">mostrar</a>
           
                    <!-- Button trigger modal -->
<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#Modal<%= user.id %>">
  editar
</button>

<!-- Modal -->
<div class="modal fade" id="Modal<%= user.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/users/<%= user.id %>/modificar" method="post">
        
      <div class="modal-body">
          <label for="">NOMBRES</label>
          <input type="text" name="nombres" class="form-control" value="<%= user.nombres %>">
          
          <label for="">APELLIDOS</label>
          <input type="text" name="apellidos" class="form-control" value="<%= user.apellidos %>">
      
          <label for="">CORREO</label>
          <input type="email" name="correo" class="form-control" value="<%= user.correo %>">
      
          <label for="">CLAVE</label>
          <input type="password" name="clave" class="form-control" value="<%= user.clave %>">
      

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-success">Modificar</button>
      </div>
    </form>
    </div>
  </div>
</div>

<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#ModalElim<%= user.id %>">
  eliminar
</button>

<!-- Modal -->
<div class="modal fade" id="ModalElim<%= user.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        
      <div class="modal-body">
          <p>¿Está seguro de Eliminar a <%= user.nombres %>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <form action="/users/<%= user.id %>" method="post">
        <button type="submit" class="btn btn-danger">Eliminar</button>
      </form>
      </div>
    </div>
  </div>
</div>


                  </td>
                </tr>
                <% }); %>
          
              </table>

            </div>

          </div>

        </div>
      </div>
    </div>

   

    
    
  </body>
</html>
